<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginP</servlet-name>
        <servlet-class>com.example.demo1.Controller.LoginC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServ</servlet-name>
        <servlet-class>com.example.demo1.Controller.CommentServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowComment</servlet-name>
        <servlet-class>com.example.demo1.Controller.ShowComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServ</servlet-name>
        <servlet-class>com.example.demo1.Controller.LogoutServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServ</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowComment</servlet-name>
        <url-pattern>/User/ShowComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginP</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServ</servlet-name>
        <url-pattern>/User/Comment</url-pattern>
    </servlet-mapping>

</web-app>